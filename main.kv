BoxLayout:
    orientation: "vertical"

    #MDToolbar:
    #    title: "Example Tabs"

    MDTabs:
        id: android_tabs
        on_tab_switch: app.on_tab_switch(*args)


<TabList>:
    ScrollView:
        bar_margin: 5
        bar_width: 15
        bar_color: .0, .8, .0, 1
        bar_inactive_color: .5, .5, .5, 1
        effect_cls: "ScrollEffect"
        scroll_type: ["bars", "content"]
        scroll_distance: 5
        scroll_timeout: 250
        MDList:
            id: container


<TabDetails>:
    MDIconButton:
        id: icon
        user_font_size: "48sp"
        pos_hint: {"center_x": .5, "center_y": .5}

