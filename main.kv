#:kivy 1.11.1
#:import T __main__.T
BoxLayout:
    orientation: "vertical"
    MDTabs:
        id: android_tabs
        on_tab_switch: app.on_tab_switch(*args)
    MDBottomAppBar:
        MDToolbar:
            id: toolbar
            title: T["co-toolbar-title"]
            icon: "eye"
            type: "bottom"
            right_action_items: [ ['earth-box', lambda x: app.menu_lang.open(x)], ['dots-vertical', lambda x: print('dots-vertical')], ]


<TabList>:
    ScrollView:
        bar_margin: 5
        bar_width: 15
        bar_color: .0, .8, .0, 1
        bar_inactive_color: .5, .5, .5, 1
        effect_cls: "ScrollEffect"
        scroll_type: ["bars", "content"]
        scroll_distance: 5
        scroll_timeout: 250
        MDList:
            id: container


<TabDetails>:
    MDIconButton:
        id: icon
        user_font_size: "48sp"
        theme_text_color: "Custom"
        text_color: 1, 0, 0, 1
        pos_hint: {"center_x": .9, "center_y": .9}
    MDLabel:
        id: label
        text: T["co-no-ps-selected"]
        halign: "center"
    MDSpinner:
        size_hint: None, None
        size: dp(46), dp(46)
        pos_hint: {'center_x': .5, 'center_y': .2}
        active: True if check.active else False
    MDCheckbox:
        id: check
        size_hint: None, None
        size: dp(48), dp(48)
        pos_hint: {'center_x': .5, 'center_y': .1}
        active: True
