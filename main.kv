BoxLayout:
    orientation: "vertical"

    #MDToolbar:
    #    title: "Example Tabs"

    MDTabs:
        id: android_tabs
        on_tab_switch: app.on_tab_switch(*args)


<TabList>:
    ScrollView:
        bar_width: 10
        bar_color: .77, .77, .77, 1
        bar_inactive_color: .33, .33, .33, 1
        effect_cls: "ScrollEffect"
        scroll_type: ['bars']
        MDList:
            id: container


<TabDetails>:
    MDIconButton:
        id: icon
        user_font_size: "48sp"
        pos_hint: {"center_x": .5, "center_y": .5}

