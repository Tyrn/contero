#:kivy 2.3.1
#:import Window kivy.core.window.Window
BoxLayout:
    orientation: "vertical"
    ScrollView:
        bar_margin: 5
        bar_width: 15
        bar_color: .0, .8, .0, 1
        bar_inactive_color: .5, .5, .5, 1
        effect_cls: "ScrollEffect"
        scroll_type: ["bars", "content"]
        scroll_distance: 5
        scroll_timeout: 50
        GridLayout:
            id: ps_list
            padding: dp(4)
            cols: 1
            size_hint_y: None
            height: self.minimum_height
    BoxLayout:
        size_hint: [1, 0.2]
        orientation: "horizontal"
        Button:
            text: "Populate"
            bold: True
            on_press: app.discovery_request()
        Button:
            text: "Clean"
            bold: True
            on_press: app.discovery_clean()


<PowerListItem>:
    bold: True
    size_hint: None, None
    width: Window.width
    height: 90

