#:import XMAX __main__.XMAX
Logic:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: [1, 0.8]
            Graph:
                id: graph
                #xlabel:'X'
                #ylabel:'Y'
                x_ticks_minor :5
                x_tics_major :25
                y_ticks_major :1
                y_grid_label: True
                x_grid_label: True
                padding :5
                x_grid: True
                y_grid: True
                xmin: -0
                xmax: XMAX
                ymin: 0
                ymax: 1
        BoxLayout:
            size_hint: [1, 0.2]
            orientation: "horizontal"
            Button:
                text: "START"
                bold: True
                on_press: root.start()
            Button:
                text: "STOP"
                bold: True
                on_press: root.stop()
